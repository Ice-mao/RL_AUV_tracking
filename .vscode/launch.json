    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/SB3_trainer.py",
            "console": "integratedTerminal",
            "args": [
                "--env_config", "configs/envs/v1_config.yml",
                "--alg_config", "configs/algorithm/ppo.yml",
                "--choice", "0"
            ],
            "env": {
                "PYTHONPATH": "/data/RL/RL_AUV_tracking/RL_AUV_tracking/"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Eval",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/SB3_trainer.py",
            "console": "integratedTerminal",
            "args": [
                "--env_config", "configs/envs/3d_v0_config.yml",
                "--alg_config", "configs/algorithm/ppo.yml",
                "--choice", "2",
                "--eval",
                "--show_viewport"
            ],
            "env": {
                "PYTHONPATH": "/data/RL/RL_AUV_tracking/RL_AUV_tracking/"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python 调试程序: 包含参数的当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}